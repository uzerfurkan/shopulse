<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerRegistrationActivity">
    
    <ImageView
        android:id="@+id/img_satici"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/title_satici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Satıcı Kayıt Formu"
        android:gravity="center"
        android:layout_below="@+id/img_satici"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/holo_green_dark"

        />

    <EditText
        android:id="@+id/satici_isim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/title_satici"
        android:hint="Mağaza İsmi"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/satici_telefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/satici_isim"
        android:hint="Mağaza İletişim Telefonu"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/satici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/satici_telefon"
        android:hint="Mağaza İletişim E-Mail Adresi"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/satici_sifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/satici_email"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/satici_adres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/satici_sifre"
        android:hint="Mağaza Adresi"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/satici_kayitol_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/satici_adres"
        android:background="@android:color/white"
        android:text="Üye Ol"
        android:textAllCaps="false"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/satici_giris_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/satici_kayitol_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="11dp"
        android:background="@android:color/holo_green_dark"
        android:text="Zaten bir hesabım var"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>